@model IEnumerable<Store.Category>

@{
    ViewData["Title"] = "Home Page";
}

<form action="/search" method="get">
    <input type="text" name="query" value=""/>
    <button type="submit">Найти</button>
</form>

<table class="table">
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a href="@Url.Action("Index", "Filter", new { categoryId = item.Id })">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
        </tr>
}
    </tbody>
</table>
