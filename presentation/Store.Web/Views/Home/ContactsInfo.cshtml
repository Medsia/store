@model Store.Data.Content.ContactsSO

@{
    ViewData["Title"] = Model.Title;
}

<h2 class="info-title">@Model.Title</h2>

<div class="info-image my-4">
    <img class="" src="@Model.ImgLink" height="200" width="800"/>
</div>

<div class="info-location my-4">
    <label class="text-info info-label">Наш адрес</label>
    <p class="info-text">@Model.Location</p>
</div>

<div class="info-worktime my-4">
    <label class="text-info info-label">Время работы</label>
    <p class="info-text">@Model.Worktime</p>
</div>


<div class="info-numers my-4">
    <label class="text-info info-label">Телефон</label>
    @foreach(var item in Model.Numbers)
    {
        <p class="info-text">@item</p>
    }
</div>


<div class="info-additional my-4">
    <label class="text-info info-label">Дополнительная информация</label>
    <p class="info-text">@Model.Additional</p>
</div>