@model OrderModel

@{
    ViewData["Title"] = "Мобильный номер";
}

<h1>Мобильный номер</h1>

<p>
    Для оформления заказа необходимо указать номер вашего мобильного телефона.
</p>

<form action="@Url.Action(nameof(OrderController.ConfirmCellPhone))" method="post">
    <div class="form-group">
        <label for="cellPhone">Мобильный телефон</label>
        <input type="tel" class="form-control" name="cellPhone" placeholder="+79876543210" value="+79876543210" />
        @if (Model.Errors.ContainsKey("cellPhone"))
        {
            <small class="form-text text-danger">@Model.Errors["cellPhone"]</small>
        }
    </div>
    <button type="submit" class="btn btn-success">Далее</button>
</form>
