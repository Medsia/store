@model  Store.Data.Content.ContactsSO

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-inline my-2 my-lg-0 ml-auto" action="@Url.Action("ContactsEdit", "Admin")" method="post">
    <div>
        <label class="">Адрес</label>
        <input class="" type="text" name="location" value="@Model.Location"/>
    </div>

    <div>
        <label class="">Время работы</label>
        <input class="" type="text" name="worktime" value="@Model.Worktime"/>
    </div>

    @*
        нужен способ вернуть в контроллер массив строк сделанный из этого \/
    *@
    <div>
        <label class="">Телефон</label>
        @foreach(var item in Model.Numbers)
        {
            <input class="" type="text" name="numbers" value="@item"/>
        }
    </div>
    @*
        ----------------------------------------------------------------------
    *@


    <div>
        <label class="">Дополнительная информация</label>
        <textarea class="" rows="10" cols="20" name="additional">@Model.Additional</textarea>
    </div>

    <div>
        <button class="" type="submit">Сохранить</button>
        <a class="" href="@Url.Action("InfoList", "Admin")">Отменить изменения и вернуться к списку</a>
    </div>
</form>