
@{
    ViewData["Title"] = "Безопасность";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-text my-2 my-lg-0 ml-auto" action="@Url.Action("ChangePass", "Admin")" method="post">
    <div class="panel-heading ml-auto mt-auto">
        <h3>Смена пароля</h3>
    </div>

    <div class="my-4">
        <h5 class="text-info security-label">Старый пароль:</h5>
        <input class="form-control form-text col-4" type="password" name="oldPassword" maxlength="30"/>
    </div>

    <div class="my-4">
        <h5 class="text-info security-label">Новый пароль:</h5>
        <input class="form-control form-text col-4" type="password" name="newPassword" maxlength="30"/>
    </div>

    <div class="my-4">
        <button class="btn btn-success" type="submit">Сохранить</button>
    </div>
</form>
