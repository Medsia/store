@model Info

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>@Model.Title</h1>


<form class="form-text my-2 my-lg-0 ml-auto" action="@Url.Action("NothingYet", "Admin")" method="post">
    <textarea class="form-control description-textarea mr-ms-2" name="aboutText" placeholder="Описание" maxlength="1024" rows="20" wrap="soft" autofocus>@Model.Description</textarea>
    <button class="btn btn-primary btn-update my-2 my-sm-0" type="submit">Обновить</button>
</form>

