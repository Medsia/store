@model IReadOnlyCollection<ProductModel>

@{
    ViewData["Title"] = "Результат поиска";
}

<h1>Результат поиска</h1>

@if (Model.Count == 0)
{
    <p>Ничего не найдено</p>
}
else
{
    @foreach (var product in Model)
    {
        <a href="@Url.Action("Index", "Product", new { id = product.Id })">
            <img class="" src="@product.ThumbnailLink" height="100" width="100"/>
            <p class="">@product.Title</p>
        </a>
    }
}
