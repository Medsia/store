<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Админ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white">
            <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">Интернет Аниме-магазин</a>
            <form class="form-inline my-2 my-lg-0 ml-auto" action="@Url.Action("Search", "Admin")" method="post">
                <input class="form-control mr-ms-2" type="search" name="query" placeholder="Поиск в каталоге"/>
                <button class="btn btn-primary my-2 my-sm-0" type="submit">Искать</button>
            </form>
        </nav>
    </header>

    <div class="dropdown-menu-left admin-menu-list p-0 m-0 w-100">
        <span class="d-block admin-menu-title">
            <span class="col-auto"></span>
            <span class="col">Магазин</span>
        </span>
        <span class="d-block admin-menu-item">
            <a href="@Url.Action("Index", "Admin")">
                <span class="row no-gutters">
                    <span class="col-auto"></span>
                    <span class="col">Товары</span>
                </span>
            </a>
        </span>
        <span class="d-block admin-menu-item">
            <a href="@Url.Action("CategoryEdit", "Admin")">
                <span class="row no-gutters">
                    <span class="col-auto"></span>
                    <span class="col">Категории</span>
                </span>
            </a>
        </span>

        <span class="d-block admin-menu-title">
            <span class="col-auto"></span>
            <span class="col">Инфо страницы</span>
        </span>
        <span class="d-block admin-menu-item">
            <a href="@Url.Action("ContactsEdit", "Admin")">
                <span class="row no-gutters">
                    <span class="col-auto"></span>
                    <span class="col">Контакты</span>
                </span>
            </a>
        </span>
        <span class="d-block admin-menu-item">
            <a href="@Url.Action("PaymentEdit", "Admin")">
                <span class="row no-gutters">
                    <span class="col-auto"></span>
                    <span class="col">Оплата</span>
                </span>
            </a>
        </span>
        <span class="d-block admin-menu-item">
            <a href="@Url.Action("DeliveryEdit", "Admin")">
                <span class="row no-gutters">
                    <span class="col-auto"></span>
                    <span class="col">Доставка</span>
                </span>
            </a>
        </span>
        <span class="d-block admin-menu-item">
            <a href="@Url.Action("AboutEdit", "Admin")">
                <span class="row no-gutters">
                    <span class="col-auto"></span>
                    <span class="col">О магазине</span>
                </span>
            </a>
        </span>

        <span class="d-block admin-menu-title">
            <span class="col-auto"></span>
            <span class="col">Безопасность</span>
        </span>
        <span class="d-block admin-menu-item">
            <a href="@Url.Action("AccountManagement", "Admin")">
                <span class="row no-gutters">
                    <span class="col-auto"></span>
                    <span class="col">Аккаунты</span>
                </span>
            </a>
        </span>
        <span class="d-block admin-menu-item">
            <a href="@Url.Action("Security", "Admin")">
                <span class="row no-gutters">
                    <span class="col-auto"></span>
                    <span class="col">Доступ</span>
                </span>
            </a>
        </span>
    </div>

    <div class="container">
        <main>
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>